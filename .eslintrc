{
  "parserOptions": {
    "ecmaVersion": 2019
  },
  "env": {
    "es6": true
  },
  "parser": "babel-eslint",
  "extends": "airbnb-base",
  "rules": {
    // 使用windows风格换行
    "linebreak-style": [
      1,
      "windows"
    ],
    "import/no-unresolved": [
      2,
      {
        "ignore": [
          "^@/"
        ] // @ 是设置的路径别名
      }
    ],
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": true
      }
    ]
  }
}